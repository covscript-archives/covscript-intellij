<templateSet group="CovScript">
	<template
			name="@begin" value="@begin&#10;&#009;$END$&#10;@end" description="Create a @begin-@end pair"
			toReformat="true" toShortenFQNames="true">
		<context>
			<option name="COVSCRIPT_STATEMENT" value="true"/>
			<option name="OTHER" value="false"/>
		</context>
	</template>
	<template
			name="block" value="block&#10;&#009;$END$&#10;end" description="Create a block"
