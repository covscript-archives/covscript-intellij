			name="try" value="try&#10;&#009;$END$&#10;catch $NAME$&#10;end" description="Create a try-catch block"
			toReformat="true" toShortenFQNames="true">
		<variable name="NAME" expression="" defaultValue="" alwaysStopAt="true"/>
		<context>
			<option name="COVSCRIPT_STATEMENT" value="true"/>
			<option name="OTHER" value="false"/>
		</context>
	</template>
	<template
			name="switch"
			value="switch $COND$&#10;&#009;case $EXPR$&#10;&#009;&#009;$END$&#10;&#009;end&#10;&#009;default&#10;&#009;end&#10;end"
			description="Create a switch statement"
			toReformat="true" toShortenFQNames="true">
		<variable name="COND" expression="" defaultValue="" alwaysStopAt="true"/>
		<variable name="EXPR" expression="" defaultValue="" alwaysStopAt="true"/>
		<context>
			<option name="COVSCRIPT_STATEMENT" value="true"/>
			<option name="OTHER" value="false"/>
		</context>
	</template>
	<template
			name="sout" value="system.out.println($END$)" description="system.out.println"
			toReformat="true" toShortenFQNames="true">
		<context>
			<option name="COVSCRIPT_STATEMENT" value="true"/>
			<option name="OTHER" value="false"/>
		</context>
	</template></templateSet>

