<idea-plugin>
	<id>org.covscript</id>
	<name>CovScript</name>
	<version>1.0</version>
	<vendor email="ice1000kotlin@foxmail.com" url="http://covscript.org">ice1000</vendor>

	<description><![CDATA[
CovScript language support.<br/>

]]></description>

	<!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
	<idea-version since-build="145.0"/>

	<depends>com.intellij.modules.lang</depends>

	<extensions defaultExtensionNs="com.intellij">
		<fileTypeFactory implementation="org.covscript.lang.CovFileTypeFactory"/>
		<fileTypeFactory implementation="org.covscript.lang.CovExtensionFileTypeFactory"/>
		<fileTypeFactory implementation="org.covscript.lang.CovPackageFileTypeFactory"/>
		<liveTemplateContext implementation="org.covscript.lang.CovContext"/>
	</extensions>

	<actions>
		<action
				id="Cov.NewCovFile"
				class="org.covscript.lang.NewCovFile"
				text="New Cov File"
				description="Create a New CovScript File">
			<add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFile"/>
		</action>
	</actions>
</idea-plugin>